{
  "name": "birdiesnburritos_server",
  "version": "1.0.0",
  "main": "src/index.ts",
  "author": "Edson Jaramillo",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=development ts-node-dev --exit-child --clear -r tsconfig-paths/register src/index.ts",
    "build": "rm -rf dist && tsc && tsc-alias -p tsconfig.json",
    "start": "cross-env NODE_ENV=development node dist/index.js",
    "start:prod": "cross-env NODE_ENV=production node dist/index.js",
    "push:dev": "cross-env NODE_ENV=development prisma db push --schema=./prisma/development.prisma",
    "push:prod": "cross-env NODE_ENV=production prisma db push --schema=./prisma/production.prisma",
    "studio:dev": "cross-env NODE_ENV=development prisma studio --schema=./prisma/development.prisma",
    "studio:prod": "cross-env NODE_ENV=production prisma studio --schema=./prisma/production.prisma",
    "generate:dev": "prisma generate --schema=./prisma/development.prisma",
    "generate:prod": "prisma generate --schema=./prisma/production.prisma",
    "clean": "rm -rf dist",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@prisma/client": "^4.15.0",
    "argon2": "^0.30.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/crypto-js": "^4.1.1",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.2.5",
    "cross-env": "^7.0.3",
    "prettier": "^2.8.8",
    "prisma": "^4.15.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.6",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4"
  }
}
